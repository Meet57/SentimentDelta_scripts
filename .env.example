# SentimentDelta Configuration
# Copy this file to .env and update values as needed

# MongoDB Configuration (REQUIRED)
MONGODB_URI=localhost:27017 # Example for local MongoDB
DATABASE_NAME=meet_data

# Stock Tickers (comma-separated)
TICKERS=AAPL,GOOGL,MSFT,TSLA,AMZN,NVDA,META,NFLX
# TICKERS=TSLA,AMZN,NVDA,META,NFLX

# Processing Settings
BATCH_SIZE=1000
# Valid periods: 1d,5d,1mo,3mo,6mo,1y,2y,5y,10y,y td,max 
DATA_PERIOD=5d
# Valid intervals: 1m,2m,5m,15m,30m,60m,90m,1h,1d,5d,1wk,1mo,3mo 
DATA_INTERVAL=15m

# TODO: Do add this date range back later
# Download start date string (YYYY-MM-DD) 
DATA_START_DATE=2023-01-01
# Download end date string (YYYY-MM-DD)
DATA_END_DATE=2024-12-31

# Scraping Settings  
SCRAPING_MAX_PAGES=1

# Embedding Model
EMBEDDING_MODEL=all-MiniLM-L6-v2

# Logging
LOG_LEVEL=INFO
LOG_FILE=sentiment_delta.log